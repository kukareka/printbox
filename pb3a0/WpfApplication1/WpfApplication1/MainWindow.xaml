<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pb="clr-namespace:WpfApplication1"
        Title="MainWindow" Height="425" Width="525">
    <StackPanel>
        <Button Click="LoadButton_Click" DockPanel.Dock="Top">Load</Button>
        <Grid x:Name="tabs">
            <pb:FolderTab x:Name="folderTab"/>
            <pb:DocumentTab x:Name="documentTab" Visibility="Hidden"/>
        </Grid>
    </StackPanel>
</Window>
