<UserControl x:Class="WpfApplication1.AuthPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:pb="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden">
        <Border Background="White" BorderBrush="Gray" BorderThickness="2" Padding="10" CornerRadius="5">
            <StackPanel>
                <TextBlock>Ваш номер телефону:</TextBlock>
                <TextBox Text="{Binding ElementName=phonePad, Path=Text}"/>
                <pb:Keypad x:Name="phonePad"/>
                <TextBlock TextWrapping="Wrap" TextAlignment="Justify">
                        Якщо Ви не користувались PrintBox раніше - на вказаний телефон буде надіслано пароль доступу до Вашого особистого рахунку в системі PrintBox.
                        На особистому рахунку зберігаються кошти, які були внесені Вами, але не використані. Ви можете використати ці кошти в будь-якому терміналі мережі PrintBox.
                </TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
