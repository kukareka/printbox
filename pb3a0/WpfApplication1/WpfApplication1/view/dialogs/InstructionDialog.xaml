<Window x:Class="WpfApplication1.InstructionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Style="{StaticResource pbDialog}"
        WindowStartupLocation="CenterOwner">
    <Border Style="{StaticResource windowBorder}">
        <Grid>
            <RichTextBox Margin="4 4 4 40" Width="300" BorderThickness="0" >
                <RichTextBox.Document>
                    <FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    ColumnWidth="400" FontSize="14" FontFamily="Georgia">
                        <Paragraph>
                            Вкажіть
                            <Bold>номер</Bold> телефону
                        </Paragraph>
                        <Paragraph>
                            Якщо раніше Ви не користувались
                            <Bold>PrintBox</Bold> - на нього буде відправлено SMS із кодом доступу до особистого рахунку.
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox.Document>
            </RichTextBox>
            <Button Content="OK" Height="23" HorizontalAlignment="Center" Margin="0,0,0,4" VerticalAlignment="Bottom" Width="75" Click="OK_Click" />
        </Grid>
    </Border>
</Window>
