        Title="ControlDialog" Height="234" Width="476">
    
    <Grid>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Height="30" VerticalAlignment="Top">
            <Button Click="LoadButton_Click">Load</Button>
            <Button Click="PromptButton_Click">Prompt</Button>
