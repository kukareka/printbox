<Window x:Class="WpfApplication1.PrintingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrintingDialog" Height="202" Width="443" WindowStartupLocation="CenterOwner" 
        Style="{StaticResource pbDialog}">
    <Window.Background>
        <SolidColorBrush />
    </Window.Background>
    <Border Style="{StaticResource windowBorder}">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding StringFormat="Надруковано сторінок: {0} із {1}">
                                <Binding Path="printProgress.PagesPrinted"/>
                                <Binding Path="printOptions.SheetsToPrint"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <Grid x:Name="doneGrid" HorizontalAlignment="Center" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock TextAlignment="Center" TextWrapping="Wrap">Друк успішно завершено. Дякуємо за користування терміналом.</TextBlock>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal"
                            Grid.Row="1">
                    <Button Grid.Column="0" Click="OK_Click" Width="100" Margin="2">OK</Button>
                    <Button x:Name="btnPrintMore" Click="PrintMore_Click" Width="100" Margin="2">Друкувати ще</Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
