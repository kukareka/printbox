<Window x:Class="WpfApplication1.AlertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource pbDialog}"
        MinWidth="300" MaxWidth="600"
        WindowStartupLocation="CenterOwner">
    <Border Style="{StaticResource windowBorder}" Padding="60 30 60 20">
        <Grid>
            <TextBlock x:Name="Message" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,0,0,50"
                       TextWrapping="Wrap" />
            <Button Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="75" Height="30" Click="OK_Click" />
        </Grid>
    </Border>

</Window>
