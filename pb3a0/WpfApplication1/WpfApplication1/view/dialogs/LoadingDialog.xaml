<Window x:Class="WpfApplication1.LoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pb="clr-namespace:WpfApplication1"
        Style="{StaticResource pbDialog}" 
        WindowStartupLocation="CenterOwner"
        Closed="Window_Closed">
    <Border Style="{StaticResource windowBorder}" Height="155" Width="415">
        <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
            <pb:LoadingAnimation x:Name="loadingAnimation1" Height="92" Padding="10 10 10 0"/>
                <TextBlock Padding="10 10 10 0" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" FontSize="14">
                    Зачекайте, будь-ласка.<LineBreak/> Іде завантаження.
            </TextBlock>
        </StackPanel>
            <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" FontSize="9">
                Якщо термінал не відповідає більше хвилини - зверніться до служби підтримки. <LineBreak/> Контактний телефон (067) 238-24-96.
            </TextBlock>
        </Grid>
    </Border>
</Window>
