<Window x:Class="WpfApplication1.PromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PromptDialog" Height="384" Width="479" xmlns:my="clr-namespace:WpfApplication1" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" Opacity="1" AllowsTransparency="True">
    <Border CornerRadius="15" BorderThickness="2" BorderBrush="Gray" Background="White" Padding="10">
        <Grid>
            <TextBlock Height="23" Name="Message" VerticalAlignment="Top" />
            <TextBox Margin="0,26,4,0" Name="Value" Height="23" VerticalAlignment="Top" />
            <my:Keypad HorizontalAlignment="Left" Margin="12,55,0,0" x:Name="Keypad" VerticalAlignment="Top" OK="OkButton_Click" Cancel="CancelButton_Click" />
            <RichTextBox Height="190" Margin="0,55,4,0" x:Name="Comment" VerticalAlignment="Top" HorizontalAlignment="Right" Width="150" />

            <StackPanel Height="29" HorizontalAlignment="Right" Name="stackPanel1" VerticalAlignment="Bottom" Width="154" Orientation="Horizontal" Margin="0,0,7,0">
                <Button Content="OK" Height="23" Width="75" Click="OkButton_Click" />
                <Button Content="Відміна" Height="23" Width="75" Click="CancelButton_Click" />
            </StackPanel>
        </Grid>
    </Border>
    <Window.Background>
        <SolidColorBrush />
    </Window.Background>
</Window>
