<Window x:Class="WpfApplication1.ServiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ServiceDialog"
        WindowStartupLocation="CenterOwner" Style="{StaticResource pbDialog}">
    <Border Style="{StaticResource windowBorder}">
        <StackPanel Width="300">
            <Button Content="Папір" />
            <Button Content="Гроші" />
            <Button Content="Черга" />
            <Button Content="Тест" />
            <Button Content="Вихід" Click="Close_Click" />
        </StackPanel>
    </Border>
</Window>
