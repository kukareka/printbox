<Window x:Class="WpfApplication1.AlertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AlertWindow" Height="168" Width="583" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" Opacity="1" AllowsTransparency="True">
    <Border CornerRadius="15" BorderThickness="2" BorderBrush="Gray" Background="White" Padding="10">
        <Grid>
            <TextBlock x:Name="Message" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            <Button Content="OK" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="75" Height="30" Click="OK_Click" />
        </Grid>
    </Border>
    <Window.Background>
        <SolidColorBrush />
    </Window.Background>
</Window>
