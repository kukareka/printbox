<Window x:Class="WpfApplication1.PromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PromptDialog" Height="320" Width="453" xmlns:my="clr-namespace:WpfApplication1">
    <Grid>
        <TextBlock Height="23" Name="Message" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="0,26,0,0" Name="Value" Width="431" Height="23" VerticalAlignment="Top" />
        <my:Keypad HorizontalAlignment="Left" Margin="12,55,0,0" x:Name="Keypad" VerticalAlignment="Top" OK="OkButton_Click" Cancel="CancelButton_Click" />
        <RichTextBox Height="190" Margin="0,55,4,0" x:Name="Comment" VerticalAlignment="Top" HorizontalAlignment="Right" Width="150" />
        
        <StackPanel Height="22" HorizontalAlignment="Right" Name="stackPanel1" VerticalAlignment="Bottom" Width="154" Orientation="Horizontal">
            <Button Content="OK" Height="23" Width="75" Click="OkButton_Click" />
            <Button Content="Відміна" Height="23" Width="75" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
