<Window x:Class="RemoteControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">Remoting URL:</TextBlock>
            <TextBox x:Name="remotingUrl"
                     Grid.Column="1"
                     Text="tcp://localhost:8088/pb_test" />
            <Button Content="Connect"
                    HorizontalAlignment="Right"
                    Grid.Column="2"
                    Click="RemotingConnect_Click" />
        </Grid>
        <StackPanel Orientation="Horizontal"
                    Height="30"
                    VerticalAlignment="Top">
            <Button Click="RemoteAdd10_Click" Width="70">+10</Button>
            <Button Width="70"
                    Click="DriveIn_Click">DriveIn</Button>
            <Button Width="70"
                    Click="DriveOut_Click">DriveOut</Button>
        </StackPanel>
    </StackPanel>
</Window>
